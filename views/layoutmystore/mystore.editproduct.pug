extends ../../views/layout/layout.pug
block content
    html  
    head
      meta(charset='UTF-8')
      meta(name='viewport' content='width=device-width, initial-scale=1.0')
      meta(http-equiv='X-UA-Compatible' content='ie=edge')
      title CDIO 3
    body
      .body-page#body-page-mystore
        .sidebar#sidebar
          .sidebarcontent#sidebar-content    
            h6#product-manager Quản Lí Sản Phẩm
              ul
                a(href="/mystore")
                  li(type="none") Tất Cả Sản Phẩm
                a(href="/mystore/add-product")  
                  li(type="none") Thêm Sản Phẩm
            h6#order-manager Quản Lí Đơn Hàng
              ul
                a(href="/mystore/all-order")
                  li(type="none")  Tất Cả Đơn Hàng
                a(href="/mystore/order-wait")  
                  li(type="none")  Đơn Hàng Chờ
                a(href="/mystore/order-delivery") 
                  li(type="none")  Đơn Hàng Đang Giao
            h6#revenue Doanh Thu
              ul 
                a(href="/mystore/revenue")
                  li(type="none") Doanh Thu
                a(href="/mystore/wallet")
                  li(type="none") Ví
        .card.mb-3#card-product-mystoreEdit
          a(href='/')
            img(style="width:188px;height:188px" src="/" + products.imageProduct).card-img-top 
          .card-body#card-body(style="width:188px")
            a(href="/")
              h5#nameProduct.card-title= products.nameProduct
            h5#priceProduct.card-title= products.priceProduct +"₫"
        form#form-add-product-mystore(action = "/mystore/edit-product/" + products.id method = "POST" enctype = "multipart/form-data")
            .form-group
                label(for="nameProduct") Tên Sản Phẩm :
                input#nameProduct.form-control(type="text" name = "nameProduct" value= products.nameProduct )
            .form-group
                label(for="priceProduct") Giá Sản Phẩm :
                input#priceProduct.form-control(type="text" name = "priceProduct" value= products.priceProduct)
            .form-group
                label(for="describeProduct") Mô Tả Sản Phẩm :
                input#describeProduct.form-control(type="text" name = "describeProduct" value= products.describeProduct)
            .form-group
                label(for="imageProduct") Hình Ảnh Sản Phẩm :
                input#imageProduct.form-control-file(type="file" name = "imageProduct")
            button.btn.btn-info Xác Nhận 